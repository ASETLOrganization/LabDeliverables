<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.teamluck.drawdiculous">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Drawdiculous"
        tools:ignore="AllowBackup">
        <activity
            android:name=".app.activity.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".app.activity.AuthenticationActivity"
            android:exported="true" />
        <activity
            android:name=".app.activity.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".app.activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".app.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activity.CreateRoomActivity"
            android:exported="true" />
        <activity
            android:name=".app.activity.GameRoomActivity"
            android:exported="true" />
        <activity
            android:name=".app.activity.JoinRoomActivity"
            android:exported="true" />
        <activity
            android:name=".app.activity.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".app.activity.DrawActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".app.activity.ForgotPasswordActivity"
            android:exported="true" />
    </application>

</manifest>